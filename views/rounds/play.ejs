<!-- Play game! page to show/hide songs, play music, accept guesses -->
<% include ../partials/header %>

<h1>Play game!!!!</h1>

<!-- start button -->
<div>
	<form>
		<input type="submit" id="startGameForm" value="start" class="button">
	</form>
</div>

<!-- audio tag for playing song previews-->
<div>
	<audio id="audioPreviewUrl" src="" alt=""></audio>
</div>

<!-- user guess input form -->
<div>
	<form>
		<label for="userInputGuess">Guess: </label>
		<input type="text" name="userInputGuess" id="userInputGuess" placeholder="??????">

		<input type="submit" id="inputGuessForm" value="Guess" class="button">
	</form>
</div>

<!-- song results -->
<div>
	<p>show artist info here</p>
</div>

<!-- score -->
<div>
	<p>show score info here</p>
</div>


<!-- bring in custom js scripts for this page -->
<script type="text/javascript" src="/js/playGame.js"></script>

<% include ../partials/footer %>
