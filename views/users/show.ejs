<!-- display a single user's bio & game info -->
<% include ../partials/header %>


<div>
	Logged in currently as <%= user.fullName %>  	
	<a href="/logout"><button class="button logout">Logout</button></a>
</div>

<div>
	<img src="<%= user.imageUrl %>" height="150px" width="160px">
</div>

<h1>Choose a playlist to guess up to 10 random the songs from that playlist.</h1>

<div class="border">
	<p>Current playlists:</p>
	<p id="showPlaylists"></p>
</div>

<form>
	<input type="hidden" id="spotifyId" value="<%= user.spotifyId %>">
</form>

<div>
	<a href="/users/<%= user.spotifyId %>/edit"><button class="button">Edit user info</button></a>
	<a href=""><button class="button">Create new playlist</button></a>
</div>

	
	

<!-- bring in custom js scripts for this page -->
<script type="text/javascript" src="/js/viewPlaylists.js"></script>
<script type="text/javascript" src="/js/findFriends.js"></script>

<% include ../partials/footer %>